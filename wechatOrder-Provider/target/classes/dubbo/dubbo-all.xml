<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	   http://code.alibabatech.com/schema/dubbo
	   http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-autowire="byName">
<!--提供方应用信息，用于计算依赖关系-->
    <dubbo:application name="${spring.dubbo.application.name}" owner="${spring.dubbo.application.owner}" organization="${spring.dubbo.application.organization}"/>
<!--使用zk注册中心暴露服务地址 需要安装zk-->
 <dubbo:registry   protocol="zookeeper"   address="${spring.dubbo.registry.address}"/>

    <!--multicast广播暴露 --> <!--<dubbo:registry address="multicast://224.5.6.7:1234" /> 不能在wifi下用 有问题-->


    <!--用dubbo协议在20881端口暴露服务-->
    <dubbo:protocol name="dubbo" port="${spring.dubbo.protocol.port}" host="${spring.dubbo.protocol.host}"/>

    <!--从注册中心发现监控中心地址，否则用address直连监控中心-->
  <!--  <dubbo:monitor protocol="registry"/>/-->
	
	<!--提供服务-->
    <import resource="classpath:dubbo/dubbo-provider*.xml"/>
    <!--消费服务-->
    <!--<import resource="classpath*:dubbo/dubbo-consumer-*.xml"/>-->
</beans>